{
  "name": "knex-is-cool",
  "version": "1.0.0",
  "description": "Knex examples with Typescript",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon",
    "start": "ts-node src/index.ts",
    "build": "tsc -p . && yarn copy-locales",
    "test": "yarn jest --runInBand",
    "lint": "eslint --ext .ts src/ tests/",
    "db:migrate:make": "yarn knex --migrations-directory src/db/migrations -x ts migrate:make",
    "db:migrate:latest": "yarn knex --knexfile knexfile.ts migrate:latest"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test && yarn lint"
    }
  },
  "author": "krzyurb",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@types/faker": "^4.1.10",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.5.3",
    "@types/uuid": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "faker": "^4.1.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-jest": "^25.1.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "knex": "^0.20.13",
    "pg": "^8.0.0",
    "uuid": "^7.0.3"
  }
}
